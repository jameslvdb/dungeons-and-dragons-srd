<p id="notice"><%= notice %></p>

<h1>Armor</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Armor type</th>
      <th>AC</th>
      <th>Strength requirement</th>
      <th>Stealth disadvantage</th>
      <th>Weight</th>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @armor.each do |armor| %>
      <tr>
        <td><%= armor.name %></td>
        <td><%= armor.armor_type %></td>
        <td><%= armor.ac %></td>
        <td><%= armor.strength_requirement %></td>
        <td><%= armor.stealth_disadvantage %></td>
        <td><%= armor.weight %></td>
        <td><%= armor.value %></td>
        <td><%= armor.description %></td>
        <td><%= link_to 'Show', armor %></td>
        <td><%= link_to 'Edit', edit_armor_path(armor) %></td>
        <td><%= link_to 'Destroy', armor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

