<%= link_to "Home", home_index_path %>

<p id="notice"><%= notice %></p>

<h1>Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Damage</th>
      <th>Weight</th>
      <th>Properties</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= link_to weapon.name.titleize, weapon_path(weapon) %></td>
        <td><%= format_value(weapon.value) %></td>
        <td><%= "#{weapon.damage} #{weapon.damage_type&.downcase}" %></td>
        <td><%= "#{weapon.weight} lbs." %></td>
        <td><%= render_properties(weapon) %></td>
        <td><%= link_to 'Show', weapon %></td>
        <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weapon', new_weapon_path %>
