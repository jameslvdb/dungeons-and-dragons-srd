<p id="notice"><%= notice %></p>

<% @spells = Spell.order(:name) %>

<h1>Spells</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>School</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= link_to spell.name.titleize, spell_path(spell) %></td>
        <td><%= ordinalize_level(spell.level) %></td>
        <td><%= spell.school.camelize %></td>
        <td><%= spell.source %></td>
        <td><%= link_to 'Show', spell %></td>
        <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
        <td><%= link_to 'Destroy', spell, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spell', new_spell_path %>
