<p id="notice"><%= notice %></p>

<h1>Spells</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>School</th>
      <th>Casting time</th>
      <th>Range</th>
      <th>Verbal</th>
      <th>Somatic</th>
      <th>Material</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Source</th>
      <th>Classes</th>
      <th>Ritual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= spell.name %></td>
        <td><%= spell.level %></td>
        <td><%= spell.school %></td>
        <td><%= spell.casting_time %></td>
        <td><%= spell.range %></td>
        <td><%= spell.verbal %></td>
        <td><%= spell.somatic %></td>
        <td><%= spell.material %></td>
        <td><%= spell.duration %></td>
        <td><%= spell.description %></td>
        <td><%= spell.source %></td>
        <td><%= spell.classes %></td>
        <td><%= spell.ritual %></td>
        <td><%= link_to 'Show', spell %></td>
        <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
        <td><%= link_to 'Destroy', spell, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

